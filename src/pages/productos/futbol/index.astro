---
import Contacto from '../../../components/Contacto/Contacto.astro';
import Burger from '../../../components/Hero/Burger';
import Nav from '../../../components/Nav.astro';
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Fútbol - Polo & Wine">
  <Nav />
  <main
    class="relative bg-five py-10 xl:min-h-[calc(100vh-33.3975rem)] xl:py-20">
    <h1 class="text-center font-title text-7xl text-two">
      Fútbol
    </h1>
    <div
      class="mx-auto mb-10 mt-16 flex flex-col items-center justify-center gap-8 lg:flex-row">
      <a
        class="flex h-[9rem] w-[90%] max-w-[25rem] items-center justify-center rounded-xl bg-two text-center font-title text-4xl text-one drop-shadow-3xl duration-200 hover:bg-one hover:text-two"
        href="/productos/futbol/ingles"
        >Fútbol Inglés</a
      >
      <a
        class="flex h-[9rem] w-[90%] max-w-[25rem] items-center justify-center rounded-xl bg-two text-center font-title text-4xl text-one drop-shadow-3xl duration-200 hover:bg-one hover:text-two"
        href="https://www.tangol.com/afiliados/tickets?AfiliadoId=c4e3d736-b146-4cbe-930c-7afa529d9035&LanguageCode=ENG"
        target="_blank"
        >Fútbol <br /> Sudamericano</a
      >
    </div>
    <Burger client:load />
  </main>
  <Contacto />
</Layout>
