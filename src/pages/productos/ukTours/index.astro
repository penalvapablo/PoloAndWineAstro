---
import Contacto from '../../../components/Contacto/Contacto.astro';
import Burger from '../../../components/Hero/Burger';
import Nav from '../../../components/Nav.astro';
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Salidas Grupales - Polo & Wine">
  <Nav />
  <main
    class="relative bg-five py-10 xl:min-h-[calc(100vh-33.3975rem)] xl:py-20">
    <h1
      class="mx-auto w-[90%] text-center font-title text-5xl text-two sm:text-7xl">
      Salidas Grupales Garantizadas
    </h1>
    <div
      class="mx-auto mb-10 mt-16 flex max-w-5xl flex-col flex-wrap items-center justify-center gap-8 lg:flex-row">
      <a
        class="flex h-[9rem] w-[90%] max-w-[25rem] items-center justify-center rounded-xl bg-two p-3 text-center font-title text-4xl text-one drop-shadow-3xl"
        href="/productos/ukTours/clasica"
        >Inglaterra Clásica</a
      >
      <a
        class="flex h-[9rem] w-[90%] max-w-[25rem] items-center justify-center rounded-xl bg-two p-3 text-center font-title text-4xl text-one drop-shadow-3xl"
        href="/productos/ukTours/maravillas"
        >Las maravillas de Inglaterra, Escocia e Irlanda</a
      >
      <a
        class="flex h-[9rem] w-[90%] max-w-[25rem] items-center justify-center rounded-xl bg-two p-3 text-center font-title text-4xl text-one drop-shadow-3xl"
        href="/productos/ukTours/islas"
        >Gran Tour de las Islas Británicas
      </a>
      <a
        class="flex h-[9rem] w-[90%] max-w-[25rem] items-center justify-center rounded-xl bg-two p-3 text-center font-title text-4xl text-one drop-shadow-3xl"
        href="/productos/ukTours/mendoza"
        >Mendoza Wine Experience</a
      >
    </div>
    <Burger client:load />
  </main>
  <Contacto />
</Layout>
