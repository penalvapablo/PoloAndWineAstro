---
import { Image } from '@astrojs/image/components';
import logo_mobile from '../../assets/logo-mobile.png';
import logo from '../../assets/Logo.png';
import SocialLinks from './SocialLinks';
import chamber from '../../assets/chamber.jpg';
---

<footer
  id="contacto"
  class="flex min-h-screen flex-col items-center bg-two px-[5%] pb-14 pt-10 xl:pb-1">
  <h2
    class="mb-20 text-center font-title text-5xl text-one">
    En mantenimiento
  </h2>

  <div
    class="mb-10 flex flex-col items-center gap-10 lg:mb-6 xl:my-14 xl:w-[1200px] xl:flex-row xl:justify-between">
    <div class="flex flex-col xl:w-[225.88px]">
      <p class="text-center font-text text-2xl text-one">
        Tel√©fono
      </p>
      <div class="flex justify-center">
        <a
          href="tel:+447397793899"
          class="mb-8 mt-1 border-b-2 border-one text-center font-text text-xl text-one duration-100 hover:border-five hover:text-five">
          +44 7397793899
        </a>
      </div>
      <p class="text-center font-text text-2xl text-one">
        Email
      </p>
      <div class="flex justify-center">
        <a
          href="mailto:info@poloandwine.com"
          class="mb-8 mt-1 w-fit border-b-2 border-one text-center font-text text-xl text-one duration-100 hover:border-five hover:text-five">
          info@poloandwine.com
        </a>
      </div>
      <p class="text-center font-text text-2xl text-one">
        Mis redes sociales
      </p>
      <SocialLinks />
    </div>

    <Image
      alt="logo"
      src={logo_mobile}
      width={400}
      height={235}
      quality={100}
      class="xsm:hidden"
    />
    <Image
      alt="logo"
      src={logo}
      width={500}
      height={293}
      quality={100}
      class="hidden max-h-[293px] xsm:inline"
    />
    <Image
      alt="logo"
      src={chamber}
      width={225.89}
      height={237}
      quality={100}
      class=""
    />
  </div>
  <p class="pb-1 text-center font-text text-sm text-one">
    Todos los derechos reservados 2023 -
    <span class="font-bold">Polo & Wine</span>
    <br class="sm:hidden" />{' '}
    <span class="hidden sm:inline"> -</span>{' '}
    Desarrollado por{' '}
    <a
      href="https://penalva-portfolio.vercel.app/"
      target="_blank"
      aria-label="link a portfolio"
      class="border-b">
      Pablo
    </a>
  </p>
</footer>
