---
import { Image } from '@astrojs/image/components';
import logo_mobile from '../../assets/logo-mobile.png';
import logo from '../../assets/Logo.png';
import SocialLinks from './SocialLinks';
---

<footer
  id="contacto"
  class="flex flex-col items-center bg-two px-[5%] pb-14 pt-10 xl:pb-1">
  <div
    class="flex flex-col lg:mb-6 lg:w-[1000px] lg:flex-row lg:items-center lg:justify-between">
    <Image
      alt="logo"
      src={logo_mobile}
      width={400}
      height={235}
      quality={100}
      class="w xsm:hidden"
    />
    <Image
      alt="logo"
      src={logo}
      width={500}
      height={293}
      quality={100}
      class="hidden h-[293px] xsm:inline"
    />
    <div class="my-10 flex flex-col lg:w-[500px]">
      <p class="text-center font-text text-2xl text-one">
        Tel√©fono
      </p>
      <div class="flex justify-center">
        <a
          href="tel:+447397793899"
          class="mb-8 mt-1 border-b-2 border-one text-center font-text text-xl text-one duration-100 hover:border-five hover:text-five">
          +447397793899
        </a>
      </div>
      <p class="text-center font-text text-2xl text-one">
        Email
      </p>
      <div class="flex justify-center">
        <a
          href="mailto:info@poloandwine.com"
          class="mb-8 mt-1 w-fit border-b-2 border-one text-center font-text text-xl text-one duration-100 hover:border-five hover:text-five">
          info@poloandwine.com
        </a>
      </div>
      <p class="text-center font-text text-2xl text-one">
        Mis redes sociales
      </p>
      <SocialLinks />
    </div>
  </div>
  <p class="font-text text-sm text-one">
    <span class="font-bold">Polo & Wine.</span> All rights reserved
    2023
  </p>
</footer>
